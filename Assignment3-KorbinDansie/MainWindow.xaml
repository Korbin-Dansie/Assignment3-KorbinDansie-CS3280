<Window x:Class="Assignment3_KorbinDansie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment3_KorbinDansie"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <!--Counts Gird-->
        <Grid Grid.Column="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <GroupBox x:Name="GBCounts" Header="Counts" BorderBrush="Black">
                <Canvas>
                    <TextBlock x:Name="tblockNumberOfStudents" Canvas.Left="32" TextWrapping="Wrap" Text="Number of students:" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock x:Name="tblockNumberOfStudents_Copy" Canvas.Left="10" TextWrapping="Wrap" Text="Number of assignments:" Canvas.Top="36" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbNumberOfStudents" TextWrapping="Wrap" HorizontalAlignment="Left" Canvas.Left="156" Canvas.Top="9" VerticalAlignment="Center" MaxLines="1" MaxLength="2" TextAlignment="Center" Padding="10,0,10,0" Width="38.94"/>
                    <TextBox x:Name="tbNumberOfAssignments" TextWrapping="Wrap" Canvas.Left="156" Canvas.Top="35" HorizontalAlignment="Center" VerticalAlignment="Center" UndoLimit="99" MaxLines="1" MaxLength="2" TextAlignment="Center" Padding="10,0,10,0" Width="38.94"/>
                    <Button x:Name="btnSubmiteCounts" Content="Submit Counts" Canvas.Left="352" Canvas.Top="21"/>
                </Canvas>
            </GroupBox>
            <Button Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="btnResetScores" TextWrapping="Wrap" TextAlignment="Center" Padding="20,0,20,0">Reset<LineBreak/>Scores</TextBlock>
            </Button>
        </Grid>
        <!--End Counts Gird-->


    </Grid>
</Window>
